<li id="post-<%= post.id %>">
  <%= link_to image_tag(post.user.gravatar_url(:size => 50)), post %>
  <span class="user"><%= link_to post.user.user_name, post.user %></span>
  <div class="bxslider-mini">
    <% post.pictures.each do |picture| %>
    <%= link_to image_tag(picture.thumb.url), post, remote: true, data: { "turbolinks" => false } %>
    <% end %>
  </div>
  <span class="content"><%= post.content %></span>
  <span class="timestamp"><%= "#{time_ago_in_words(post.created_at)}å‰" %></span>
</li>

<div id="post-modal" style="z-index: 10000" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>